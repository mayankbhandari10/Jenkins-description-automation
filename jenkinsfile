pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Run your build steps here
                    sh 'abs' // Run your command here

                    // Capture the console output
                    def consoleLog = currentBuild.rawBuild.getLog(1000)

                    // Reverse the order of lines in the console log
                    def reversedConsoleLog = consoleLog.reverse()

                    // Convert the reversed console log (ArrayList) to a string
                    def reversedConsoleLogString = reversedConsoleLog.join('\n')

                    // Print the reversed console log
                    echo "Reversed Console Log:"
                    echo reversedConsoleLogString

                    // Intentionally fail the build
                    error("This build intentionally failed.")
                }
            }
        }
    }
}

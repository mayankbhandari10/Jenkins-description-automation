pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'echo "Simulating Build Failure" && exit 1'
            }
        }
    }

    post {
        failure {
            script {
                // Capture the build log into a variable
                def buildLog = currentBuild.rawBuild.getLog(10000).reverse().join('\n')

                // Escape special characters in the regex pattern
                def escapedPattern = 'java\\.io\\.IOException: CreateProcess error=\\d+, The system cannot find the file specified'

                // Extract the failure reason from the build log
                def failureReason = buildLog =~ /${escapedPattern}/

                if (failureReason) {
                    // Get the first match, assuming it's the error message
                    def errorMessage = failureReason[0][0] ?: "Unknown Error"
                    currentBuild.description = "Build Failed: ${errorMessage}"
                } else {
                    currentBuild.description = "Build Failed: Unknown Reason"
                }
            }
        }
    }
}
